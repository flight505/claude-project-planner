{
  "name": "claude-project-planner",
  "version": "1.4.1",
  "description": "Comprehensive project planning and architecture research skills for Claude Code - generates software architecture documents, sprint plans, building blocks, service cost analysis, and implementation roadmaps backed by real research.",
  "author": {
    "name": "Jesper Vang",
    "url": "https://github.com/flight505"
  },
  "license": "MIT",
  "repository": "https://github.com/flight505/claude-project-planner",
  "homepage": "https://github.com/flight505/claude-project-planner",
  "keywords": [
    "project-management",
    "planning",
    "tasks",
    "productivity",
    "architecture",
    "research",
    "sprints",
    "cost-analysis"
  ],
  "category": "productivity",
  "commands": "./commands",
  "agents": [
    "./agents/architecture-validator.md"
  ],
  "skills": [
    "./project_planner/.claude/skills/research-lookup",
    "./project_planner/.claude/skills/project-diagrams",
    "./project_planner/.claude/skills/architecture-research",
    "./project_planner/.claude/skills/building-blocks",
    "./project_planner/.claude/skills/sprint-planning",
    "./project_planner/.claude/skills/service-cost-analysis",
    "./project_planner/.claude/skills/risk-assessment",
    "./project_planner/.claude/skills/feasibility-analysis",
    "./project_planner/.claude/skills/plan-review",
    "./project_planner/.claude/skills/competitive-analysis",
    "./project_planner/.claude/skills/market-research-reports",
    "./project_planner/.claude/skills/generate-image",
    "./project_planner/.claude/skills/markitdown",
    "./project_planner/.claude/skills/document-skills/docx",
    "./project_planner/.claude/skills/document-skills/pdf",
    "./project_planner/.claude/skills/document-skills/pptx",
    "./project_planner/.claude/skills/document-skills/xlsx",
    "./project_planner/.claude/skills/marketing-campaign",
    "./project_planner/.claude/skills/report-generation"
  ],
  "hooks": {
    "SessionStart": "./.claude-plugin/hooks/SessionStart.sh"
  },
  "requirements": {
    "python": ">=3.10"
  },
  "optional_dependencies": {
    "openrouter": {
      "env_var": "OPENROUTER_API_KEY",
      "purpose": "Real-time technology research via OpenRouter API",
      "required": false
    },
    "gemini": {
      "env_var": "GEMINI_API_KEY",
      "purpose": "Deep Research and image generation via Google Gemini",
      "required": false
    }
  },
  "claude_api": {
    "uses_claude": true,
    "preferred_env": "CLAUDE_CODE_OAUTH_TOKEN",
    "fallback_env": "ANTHROPIC_API_KEY"
  }
}
